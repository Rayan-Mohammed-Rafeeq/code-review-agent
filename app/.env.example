# Template environment file (DO NOT put secrets in git)
# Copy to repo root as `.env` for local development.

# Offline mode for judges (no network, no secrets):
# LLM_PROVIDER=none

LLM_PROVIDER=openai
LLM_API_KEY=your_llm_api_key_here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT_SECONDS=30.0

# Optional: ScaleDown prompt compression
SCALEDOWN_API_KEY=

# Optional: Firebase Admin SDK credentials (prefer env var or file path)
# FIREBASE_SERVICE_ACCOUNT_JSON={...}
# FIREBASE_SERVICE_ACCOUNT_FILE=C:\\path\\to\\service-account.json
